<p id="notice"><%= notice %></p>
<h1 style="text-align:center">Posts</h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <%= render 'posts/components/post_preview', post: post %>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path %>
