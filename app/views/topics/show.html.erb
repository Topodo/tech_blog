<p id="notice"><%= notice %></p>

<h1 style="text-align:center"><%= "Posts de #{@topic.title}" %></h1>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @topic.posts.each do |post| %>
      <%= render 'posts/components/post_preview', :post => post %>
    <% end %>
  </tbody>
</table>